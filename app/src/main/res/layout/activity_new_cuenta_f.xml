<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|top"
    android:orientation="vertical"
    android:paddingStart="18dp"
    android:paddingTop="250dp"
    android:paddingEnd="18dp">

    <EditText
        android:id="@+id/etNombreCuenta"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:autofillHints="username"
        android:hint="@string/nombre_de_la_cuenta"
        android:inputType="text"
        android:maxWidth="300dp"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/etSaldoInicial"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:autofillHints="amount"
        android:hint="@string/saldo_inicial"
        android:inputType="numberDecimal"
        android:maxWidth="300dp"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btnGuardarCuenta"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/azul_logo"
        android:text="@string/guardar_cuenta"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btnBorrarCuenta"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/azul_logo"
        android:text="@string/borrar_cuenta"
        android:textColor="#FFFFFF"
        android:visibility="gone"
        android:layout_margin="10dp" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/azul_logo"
        android:text="@string/volver"
        android:textColor="#FFFFFF"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/tvMensaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:text=""
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="bold" />
</LinearLayout>
